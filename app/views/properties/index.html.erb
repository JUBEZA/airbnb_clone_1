<h1>Properties</h1>

<%= link_to 'New Property', new_property_path %>

<div class="container mt-5">
  <h1 class="mb-4">Available Properties</h1>
  <div class="row">
    <% @properties.each do |property| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img src="https://via.placeholder.com/350x150" class="card-img-top" alt="<%= property.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= link_to property.title, property_path(property) %></h5>
            <p class="card-text"><%= truncate(property.description, length: 100) %></p>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(property.price) %></p>
            <p class="card-text"><strong>Location:</strong> <%= property.location %></p>
            <%= link_to 'View Details', property_path(property), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
